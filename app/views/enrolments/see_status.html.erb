<div class='d-flex align-items-center justify-content-center'>
  <div class='col-md-6'>
    <h2 class='mb-4'> <%= @course.name %> <small><small> Pending Applications</small></small> </h2>

    <table class="table">
      <thead>
        <tr>
          <th scope="col">#      </th>
          <th scope="col">First  </th>
          <th scope="col">Status </th>
        </tr>
      </thead>
      <tbody>
        <% @enrolments.each_with_index do |enrolment, index| %>
          <% if enrolment.status == "pending" %>
            <tr class='table-secondary'>
          <% elsif enrolment.status == "accepted" %>
            <tr class='table-success'>
          <% else %>
            <tr class='table-danger'>
          <% end %>
          <th scope="row"> <%= index+1 %> </th>
          <td> <%= link_to User.find(enrolment.user_id).name, one_status_path(id: enrolment.id), style:'color:black' %> </td>
          <% if enrolment.status == "pending" %>
            <td> Pending </td>
          <% elsif enrolment.status == "accepted" %>
            <td> Accepted </td>
          <% else %>
            <td> Rejected </td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>
