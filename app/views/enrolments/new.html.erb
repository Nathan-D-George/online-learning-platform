<div class='d-flex align-items-center justify-content-center'>
  <div class='col-md-4'>
    <h1> <%= @course.name %> </h1>
    <h5> What is this course about? </h5>
    <p style='text-align:justify'> <%= @course.description %> </p>
    <p> If this interests you, apply below! </p>
    <hr style="margin-top:30px; margin-bottom:30px">
    <h1> Apply </h1>
    <%= form_with model:@enrolment, url: create_enrolment_path, method: :post do |f| %>
      <div class='row mt-2 mb-3'>
        <div class='col-6'>  
          <%= f.label :name %> 
          <%= f.text_field :name,    class:'form-control' %> 
        </div>
        <div class='col-6'>
          <%= f.label :surname %>
          <%= f.text_field :surname, class:'form-control' %>
        </div>
      </div>
      
      <p>
        <%= f.label :email_address %>
        <%= f.text_field :email, class:'form-control' %>
      </p>
      <%= f.select :course, [@course.id], {}, {class:'form-select quiz-number'} %>
      <p>
        <%= f.label :id_cv_and_nsc %>
        <%= f.file_field :files, multiple: true, class:'form-control' %>
      </p>
      <p> 
        <%= f.submit "Submit", class:'btn btn-primary mt-4 col-3' %>
      </p>
    <% end %>
    <%= link_to "Back", list_courses_path, class:'btn btn-secondary col-2' %>
  </div>
</div>
