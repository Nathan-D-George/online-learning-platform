<div class='d-flex align-items-center justify-content-center'>
  <div class='col-md-6'>
    <h1> Courses </h1>
    <div class='list-group'>
      <% @courses.each do |course| %>
        <div class='round'>
          <%= link_to show_course_path(id: course.id), class:'list-group-item list-group-action-item mt-4 round' do %>
            <h3> <%= course.name %> </h3>
            <p>  <%= course.description.truncate(50) %> </p>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>