<div class='d-flex justify-content-center align-items-center'>
  <div class='col-md-6 mt-4'>
    <div class="card">
      <div class="card-header text-center">
        <h3> <%= @course.name %> </h3>
      </div>
      <div class="card-body">
        <h5> Description </h5>
        <%= @course.description %>
        <h5> Teacher </h5>
        <%= User.find(@course.user_id).name %>
      </div>
    </div>
    <% if @course.user_id == Current.user.id %>
      <%= link_to edit_course_path(id:@course.id), class:'btn mt-4', style:'background-color:yellow' do %>
        <%= fa_icon "pencil-square" %> Edit
      <% end %>
      <%= link_to new_lesson_path(id: @course.id), class:'btn mt-4', style:'color:white; background-color:blue' do %>
        <%= fa_icon "plus-circle" %> Lesson
      <% end %>
    <% end %>
  </div>
</div>
