<div class='d-flex justify-content-center align-items-center'>
  <div class='col-md-5'>
    <h1> <%= @course.name %> <small><small> Lessons </small></small> </h1>
    <small><small> <%= render 'breadcrumbs' %> </small></small>
    <% if Current.user.id == @course.user_id %>
      <%= link_to new_lesson_path(id:@course.id), class:'btn btn-dark mt-3 mb-4' do %>
        <%= fa_icon "plus-circle" %> New Lesson
      <% end %>
    <% end %>
    <div class='list-group'>
      <% if @lessons.present? %>
        <% @lessons.each do |lesson| %>
          <div class='row round'>
            <%= link_to show_lesson_path(id: lesson.id), class:'list-group-item list-group-action mt-2 mb-3', style:'height: 100px' do %>
              <h4> <%= lesson.name %> </h4>
              <%= lesson.description.truncate(60) %>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
