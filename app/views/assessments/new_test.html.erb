<div class='d-flex align-items-center justify-content-center'>
  <div class='col-md-6'>
    <h4> <%= @assessment.name %> </h4>
    <h6>Description </h6> 
    <%= @assessment.description %>
    <div class="mt-4 mb-4">
      <%= form_with model:@assessment, url: add_question_paper_path, method: :post do |f| %>
        <p>
          <h6> <%= f.label :add_question_paper %> </h6>
          <%= f.file_field :file, multiple: true, class:'form-control' %>
        </p>
        <%= f.submit "Add", class:'btn btn-primary col-2' %>
      <% end %>
    </div>
  </div>
</div>