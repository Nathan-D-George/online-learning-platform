<div class='d-flex justify-content-center align-items-center'>
  <div class='row col-6'>
    <div class='col-md-12'>
      <h1> New Quiz</h1>
      <%= form_with model:@quiz, url: create_quiz_path, method: :post do |f| %>
        <p>
          <%= f.label :total %>
          <%= f.number_field :total, in: 5..150, step: 1, class:'form-control'  %>
        </p>
        <p>
          <%= f.label :number_of_questions %>
          <%= f.number_field :number_of_questions, in: 1..20, step: 1, class:'form-control' %>
        </p>
        <%= f.submit "Submit", class:'btn btn-success col-md-2' %>
      <% end %>
    </div>

  </div>
</div>
<%= link_to "make questions", new_question_path, class:'btn btn-dark' %>
