<div class='d-flex justify-content-center align-items-center'>
  <div class='col-md-6'>
    <h2> Quizzes </h2>
    <div class='list-group'>
      <% if Current.user.id == @course.user_id %>
        <%= link_to new_assessment_path, class:'btn mt-3 mb-3 col-2', style:'background-color:blue; color:white' do %>
          <%= fa_icon 'plus-circle' %>New Quiz
        <% end %>
      <% end %>
      <% @quizzes.each do |quiz| %>
        <%= link_to take_quiz_path(id: quiz.id), class:'mt-3 list-group-item list-group-item-action', style:'color: black' do %>
          <div class='row'>
            <div class='col-md-2'>
              <%= image_tag( @pic, style:'height:80px; width: 80px; border-radius:50%') %>
            </div>
            <div class='col-md-10'>
              <h5> <%= quiz.name %>  </h5>
              <p>  <%= Assessment.find(quiz.assessment_id).description.truncate(100) %> </p>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
