<div class='d-flex align-items-center justify-content-center'>
  <div class='col-md-6'>
    <h1 class='mt-2 mb-4'> Tests of <%= @course.name%> </h1>
    <div class='list-group'>
      <% @tests.each do |test| %>
        <%= link_to show_assessment_path(id: test.id), class:'list-group-item list-group-item-action mt-4', style:'color:black; text-decoration:none; border-radius:20px; height:70px' do %> 
          <h5> <%= test.name %> </h5>
          <p><%= test.description.truncate(35) %> </p>
        <% end %>
      <% end %>
    </div>
  </div>
</div>