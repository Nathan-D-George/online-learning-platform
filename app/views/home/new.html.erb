<div class='d-flex align-items-center justify-content-center'>
  <div class='col-md-6'>
    <h1>Online Learning Platform</h1>

    <% if Current.user.blank? %>
      <%= link_to "Sign Up", new_user_path, class:'btn btn-primary col-2 mt-4' %>
      <%= link_to "Sign In", new_user_session_path, class:'btn btn-outline-primary col-2 mt-4' %>
    <% else %>
      <%= link_to "Edit Account", edit_user_path(id: Current.user.id), class:'btn btn-success col-3 mt-4' %>
      <%= link_to "Courses", list_courses_path, class:'btn btn-dark col-3 mt-4' %>
      <% if Current.user.teacher == true %>
        <%= link_to "Create Course", new_course_path, class:'btn btn-light col-3 mt-4' %>
      <% end %> 
      <% if @courses.present? %> 
        <% @courses.each do |course| %> 
          <% if course.user_id == Current.user.id %> 
            <div class='list-group'> 
              <h4 class='mt-4 col-md-9 round'> 
                <%= link_to course.name, show_course_path(id: course.id), class:'list-group-item list-group-action round', style:'color:black; height: 100px' %>
              </h4>
            </div>
          <% end %>
        <% end %>
      <% end %>
    <% end%>

  </div>
</div>
