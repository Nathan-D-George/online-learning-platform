<h1>Online Learning Platform</h1>

<% if Current.user.blank? %>
  <%= link_to "Sign Up", new_user_path, class:'btn btn-primary' %>
  <%= link_to "Sign In", new_user_session_path, class:'btn btn-outline-primary' %>
<% else %>
  <%= link_to "Edit Account", edit_user_path(id: Current.user.id), class:'btn btn-success' %>
  <% if Current.user.teacher == true %>
    <%= link_to "Create Course", new_course_path, class:'btn btn-light' %>
  <% end %>
<% end%>
